# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features

FEATURE_MMM_GUARDRAILS=true
FEATURE_MTA_COMPARISON=true
FEATURE_COMPETITOR_INTEL=true
FEATURE_IMPACT_SIMULATION=true
FEATURE_BATCH_PROCESSING=true

# ===========================================
# LOGGING & DEBUG
# ===========================================
LOG_LEVEL=INFO
DEBUG_MODE=false

# Print LLM prompts and responses (verbose)
DEBUG_LLM_CALLS=false