# ===========================================
# EXPEDITION CONFIGURATION
# Copy to .env and fill in your values
# ===========================================

# --- Google Cloud ---
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1
# Leave empty to use application default credentials (recommended)
# Run: gcloud auth application-default login
GOOGLE_APPLICATION_CREDENTIALS=

# --- Models (Tiered Intelligence) ---
# Tier 1: Fast, cheap (routing, data fetching)
GEMINI_TIER1_MODEL=gemini-2.0-flash
# Tier 2: Smart, expensive (reasoning, explaining)
GEMINI_TIER2_MODEL=gemini-2.5-pro
# Embeddings for RAG
EMBEDDING_MODEL=text-embedding-004

# --- Data Layer Mode ---
# "mock" = Use CSV files in data/mock_csv/
# "production" = Use BigQuery (implement connectors first)
DATA_LAYER_MODE=mock

# --- BigQuery (Production Mode) ---
BQ_PROJECT=
BQ_DATASET=

# --- RAG Configuration ---
CHROMA_PERSIST_DIR=./data/embeddings
RAG_TOP_K=3

# --- Action Layer Mode ---
# "mock" = Log actions without executing
# "production" = Execute via real APIs
ACTION_LAYER_MODE=mock

# --- Notifications ---
# Slack webhook URL for alerts
# Create at: https://api.slack.com/apps -> Incoming Webhooks
SLACK_WEBHOOK_URL=

# --- Phase 3: Ad Platform APIs (fill when ready) ---

# Google Ads API
# Get credentials: https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# Meta Marketing API  
# Get credentials: https://developers.facebook.com/docs/marketing-apis/
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=

# TikTok Ads API
# Get credentials: https://ads.tiktok.com/marketing_api/
TIKTOK_ACCESS_TOKEN=
TIKTOK_ADVERTISER_ID=

# CreatorIQ (Influencer Platform)
# Get credentials from your CreatorIQ account
CREATORIQ_API_KEY=
CREATORIQ_ACCOUNT_ID=
