# ===========================================
# PROJECT EXPEDITION CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# Lines starting with # are comments
# ===========================================

# ===========================================
# LAYER MODES
# ===========================================
# Options: "mock" or "production"
# Mock mode uses CSV files and logs actions without executing
# Production mode uses real data sources and APIs

DATA_LAYER_MODE=mock
ACTION_LAYER_MODE=mock

# ===========================================
# GOOGLE CLOUD / VERTEX AI
# ===========================================
# Required for Gemini API access

GOOGLE_CLOUD_PROJECT=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Optional: Path to service account key (if not using ADC)
# GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# ===========================================
# GEMINI MODELS (Tiered Intelligence)
# ===========================================
# Tier 1: Fast, cheap - routing and classification
# Tier 2: Powerful - investigation, diagnosis, validation

GEMINI_TIER1_MODEL=gemini-2.0-flash
GEMINI_TIER2_MODEL=gemini-2.5-pro
EMBEDDING_MODEL=text-embedding-004

# For Gemini 3 (when available/allowlisted):
# GEMINI_TIER1_MODEL=gemini-3-flash-preview
# GEMINI_TIER2_MODEL=gemini-3-pro-preview

# ===========================================
# RAG CONFIGURATION
# ===========================================
CHROMA_PERSIST_DIR=./data/embeddings
RAG_TOP_K=3

# ===========================================
# BIGQUERY (Production Data Layer)
# ===========================================
# Only needed when DATA_LAYER_MODE=production

BQ_PROJECT=your-bq-project
BQ_DATASET=marketing_data

# ===========================================
# SLACK NOTIFICATIONS
# ===========================================
# Webhook URL for sending alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXX/XXXXX/XXXXX

# Channel for general marketing alerts
SLACK_CHANNEL_ALERTS=#marketing-alerts

# Channel for media buying team (offline channel actions)
SLACK_CHANNEL_MEDIA_BUYING=#media-buying

# Channel for engineering alerts (tracking issues)
SLACK_CHANNEL_ENGINEERING=#marketing-engineering

# Channel for creative team alerts
SLACK_CHANNEL_CREATIVE=#creative-team

# ===========================================
# EMAIL NOTIFICATIONS (Optional)
# ===========================================
# For offline channel vendor communications

EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=alerts@yourcompany.com
EMAIL_SENDER_PASSWORD=
EMAIL_ENABLED=false

# ===========================================
# GOOGLE ADS API
# ===========================================
# Required for production Google Ads execution
# Docs: https://developers.google.com/google-ads/api/docs/start

GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# ===========================================
# META (FACEBOOK) ADS API
# ===========================================
# Required for production Meta Ads execution
# Docs: https://developers.facebook.com/docs/marketing-apis/

META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=
META_APP_ID=
META_APP_SECRET=

# ===========================================
# TIKTOK ADS API
# ===========================================
# Required for production TikTok Ads execution
# Docs: https://business-api.tiktok.com/

TIKTOK_ACCESS_TOKEN=
TIKTOK_ADVERTISER_ID=
TIKTOK_APP_ID=
TIKTOK_SECRET=

# ===========================================
# LINKEDIN ADS API
# ===========================================
# Required for production LinkedIn Ads execution
# Docs: https://learn.microsoft.com/en-us/linkedin/marketing/

LINKEDIN_ACCESS_TOKEN=
LINKEDIN_AD_ACCOUNT_ID=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ===========================================
